<h2 class="mb-3">Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-floating mb-2">
    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Adresse mail" %>
    <label>Adresse mail</label>
  </div>

  <div class="field form-floating mb-2">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Mot de passe" %>
    <label>Mot de passe</label>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check form-switch mb-2">
      <%= f.check_box :remember_me, { class: "form-check-input" } %>
      <%= f.label :remember_me, "Se souvenir de moi" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Se connecter", { class: "btn btn-primary" } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
